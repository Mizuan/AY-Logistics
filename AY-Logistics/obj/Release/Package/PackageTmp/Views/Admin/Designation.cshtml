@model AYLogistics.Models.Designation_Settings
@{
    ViewBag.Title = "Add Designation";
}
<h4 style="margin-left: 339px;">Designation Settings</h4>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div class="PageMenu">
        <div class="btn-group">
            <a href="@Url.Action("Index", "Employee")" class="btn btn-primary" ><i class="icon-hand-left"></i>&nbspBack</a>
        </div>
    </div>

@using (Html.BeginForm("AddDesignation", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="span12">
        <fieldset>
            <legend>Employees Designations</legend>
            <div class="control pull-left">
                <label>Add Designation</label>
                @Html.TextBoxFor(model => model.EmpDesignation)
                @Html.ValidationMessageFor(model => model.EmpDesignation)
            </div>
        </fieldset>
    </div>
    <p>
      <input type="submit" value="Add" class="btn btn-success" />
    </p>
}

@using (Html.BeginForm("EditDesignation", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div class="span12">
    <fieldset>
         <div class="control pull-left">
           <label>Existing Designation</label>
            @Html.DropDownListFor(m => m.DesignationId, new SelectList(AYLogistics.Models.Designation_Settings.GetAllDesignations(), "DesignationId", "EmpDesignation"), "--please Select--", new { @class = "", OnChange = "GetDesignationTxt(this.value)" })
            @Html.ValidationMessageFor(model => model.DesignationId)
        </div>
         <div class="control pull-left space-right">
                <label>Update Designation</label>
                @Html.TextBoxFor(model => model.UpdateDesignation)
        </div>
    </fieldset>
    </div>
    
    <p>
        <input type="submit" value="Update" class="btn btn-info" />
    </p>
}

<script type="text/javascript">

    function GetDesignationTxt(value) {
        $('#UpdateDesignation').val($('#DesignationId option:selected').text());
    }

 </script>