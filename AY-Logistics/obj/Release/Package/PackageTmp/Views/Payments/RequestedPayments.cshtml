@using System.Web.Security;
@using AYLogistics.Models;
@{
    ViewBag.Title = "RequestedPayments";
}

<h2>Requested Payments</h2>

@*START Dash Board*@

<div id="breadcrump">
     <ul class="breadcrumb" data-bind="foreach:breadcrumptlist">
        <li><a href="#" class="lang" data-bind="text:Name, click:navigate">Dash Board</a> <span class="divider" data-bind="visible: divider "><i class='icon-chevron-right gotoselect_session pointer'></i> </span></li>
    </ul>
</div>
<div class="row-fluid dashboard" id ="dashboard">
    <div class="row-fluid StatusClass" data-bind="foreach:dashboarditem">
        <div class="span2 actionItem md-whiteframe-4dp pointer" data-bind="click: $root.FilterStatus, css: backgroundcolor, attr: { title: Title } "   style="/*border-color: rgb(255, 87, 34); color: rgb(255, 255, 255); background-color: rgb(255, 87, 34);*/">
            <div class="item">
              <span class="bi-direction" data-bind="text:Total"></span>
              <p data-bind="text:Name"></p>
             
            </div>
        </div>
    </div>
</div>

<div class="row-float " style="margin-top: 19px;">
   @{Html.RenderPartial("../Payments/_paymentFilter", new AYLogistics.Models.BLStatus());}
</div>
<script language="javascript" src="@Url.Content("~/Scripts/payment_dashboard.js")" type="text/javascript">

</script>

@*END Dash Board*@