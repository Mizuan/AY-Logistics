    const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton.addEventListener('click', function() {
          mobileMenu.classList.toggle('hidden');
      });
  </script>

  <script type="text/javascript">
      /****Auto redirect to login Page after session expired*******/
      var timeout = @FormsAuthentication.Timeout.TotalMilliseconds; // time taken from 'Web.config'
      var wintimeout;

      function SetWinTimeout() {
          wintimeout = window.setTimeout("window.location.href='@FormsAuthentication.LoginUrl';", timeout); // In milliseconds
      }

      $('body').click(function() {  
          // When user clicks, remove timeout and reset it
          window.clearTimeout(wintimeout);  
          SetWinTimeout();
      });

      SetWinTimeout();
  </script>
