@model AYLogistics.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}

<div class="max-w-4xl mx-auto px-4 py-6">
    <h2 class="text-2xl font-semibold mb-4 text-gray-900">Change Password</h2>
    <p class="text-sm text-gray-700 mb-2">
        Use the form below to change your password.
    </p>
    <p class="text-sm text-gray-700 mb-4">
        New passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
    </p>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.", new { @class = "text-red-500 mb-4" })

        <div class="grid grid-cols-1 gap-6">
            <!-- Old Password -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.OldPassword)
                </label>
                @Html.PasswordFor(
                    m => m.OldPassword,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- New Password -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.NewPassword)
                </label>
                @Html.PasswordFor(
                    m => m.NewPassword,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Confirm Password -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </label>
                @Html.PasswordFor(
                    m => m.ConfirmPassword,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-6">
            <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600 focus:outline-none">
                Change Password
            </button>
        </div>
    }
</div>
