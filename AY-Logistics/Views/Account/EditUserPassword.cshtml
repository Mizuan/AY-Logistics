@model AYLogistics.Models.EditUserPasswordVM

@{
    ViewBag.Title = "Change User Password";
}

<div class="max-w-7xl mx-auto px-4 py-6">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900">Change Password</h2>

    <!-- Back Button -->
    <div class="mb-6">
        <a href="@Url.Action("ViewUser", "Account")" class="px-4 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600 focus:outline-none">
            <i class="fas fa-arrow-left mr-2"></i> Back
        </a>
    </div>

    <!-- Change Password Form -->
    @using (Ajax.BeginForm("EditUserPassword", "Account", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess" }))
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <!-- Username -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.UserName)
                </label>
                @Html.TextBoxFor(
                    m => m.UserName,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Email -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.Email)
                </label>
                @Html.TextBoxFor(
                    m => m.Email,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.Password)
                </label>
                @Html.PasswordFor(
                    m => m.Password,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm" })
            </div>

            <!-- Confirm Password -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </label>
                @Html.PasswordFor(
                    m => m.ConfirmPassword,
                    new { @class = "w-full p-2 border rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300" }
                )
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-sm" })
            </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-4">
            <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-md shadow hover:bg-green-600 focus:outline-none">
                Update
            </button>
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        $('#subUser').show(); // expand the sub menu
    });
</script>
