@model AYLogistics.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="min-h-screen flex">
    <!-- Left section for logo and information (visible on large screens) -->
    <div class="hidden lg:flex lg:items-center lg:w-3/5 bg-white p-10 lg:p-24">
        <div class="max-w-xl mx-auto">
            <div class="flex flex-col items-center justify-center">
                <div class="mb-4">
                    <img src="../../Content/images/AFlogoV2.png" alt="Naalu Logistics" class="w-40">          
                </div>
                <div class="text-center">
                    <h2 class="text-xl md:text-2xl xl:text-3xl font-bold mb-3">Naalu Logistics</h2>
                    <p class="text-gray-600 text-xl xl:text-2xl">Please sign in to continue.</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Right section for login form -->
    <div class="w-full lg:w-2/5 bg-blue-50 p-8 flex items-center justify-center relative">
        <div class="w-full md:mt-0 sm:max-w-lg xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <div class="flex justify-center md:hidden mb-10">
                    <img src="../../Content/images/AFlogoV2.png" alt="Naalu Logistics" class="w-40">      
                </div>
                <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl text-center">
                    Sign in to your account
                </h1>

                <!-- Validation Summary with Flowbite Alert -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert flex p-4 mb-4 bg-red-100 rounded-lg items-center" role="alert">
                        <i class="fa-solid fa-circle-exclamation text-red-700"></i>
                        <span class="sr-only">Error</span>
                        <div class="ml-3 text-sm font-medium text-red-700">
                            @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
                        </div>
                    </div>
                }

                @using (Html.BeginForm()) {
                    <div class="space-y-4">
                        <div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "block w-full px-4 py-2 text-sm text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-blue-600 focus:border-blue-600", placeholder = "Username" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-red-500 text-sm mt-1" })
                        </div>

                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "block w-full px-4 py-2 text-sm text-gray-900 bg-white border border-gray-300 rounded-lg focus:ring-blue-600 focus:border-blue-600", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-500 text-sm mt-1" })
                        </div>

                        <div class="flex justify-between items-center">
                            <button type="submit" class="w-full py-2.5 px-5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300">Sign in</button>
                        </div>
                    </div>
                }

                <p class="text-sm text-gray-500 text-center mt-6">&copy; 2024 Naalu Logistics</p>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
