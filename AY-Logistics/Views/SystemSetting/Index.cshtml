@model AYLogistics.Models.SystemSetting
@{
    ViewBag.Title = "System Settings";
}

<div class="max-w-4xl mx-auto px-4 py-6">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">System Settings</h2>

    <!-- Format and Numbering -->
    @using (Html.BeginForm("UpdateManifestFormat", "SystemSetting", FormMethod.Post))
    {
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h3 class="text-lg font-medium text-gray-700 mb-4">Format and Numbering</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.ManifestFormat)
                    </div>
                    @Html.TextBoxFor(
                        m => m.ManifestFormat,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.ManifestFormat, "", new { @class = "text-red-500 text-sm" })
                </div>
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.ManifestSequence)
                    </div>
                    @Html.TextBoxFor(
                        m => m.ManifestSequence,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.ManifestSequence, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                    Save
                </button>
            </div>
        </div>
    }

    <!-- Job Format -->
    @using (Html.BeginForm("UpdateJobFormat", "SystemSetting", FormMethod.Post))
    {
        <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h3 class="text-lg font-medium text-gray-700 mb-4">Job Format</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.JobFormatSEA)
                    </div>
                    @Html.TextBoxFor(
                        m => m.JobFormatSEA,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.JobFormatSEA, "", new { @class = "text-red-500 text-sm" })
                </div>
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.JobFormatAIR)
                    </div>
                    @Html.TextBoxFor(
                        m => m.JobFormatAIR,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.JobFormatAIR, "", new { @class = "text-red-500 text-sm" })
                </div>
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.JobSequence)
                    </div>
                    @Html.TextBoxFor(
                        m => m.JobSequence,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.JobSequence, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                    Save
                </button>
            </div>
        </div>
    }

    <!-- Document Types -->
    @using (Html.BeginForm("AddDocType", "SystemSetting", FormMethod.Post))
    {
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-700 mb-4">Document Types</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.DocumentName)
                    </div>
                    @Html.TextBoxFor(
                        m => m.DocumentName,
                        new { @class = "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
                    )
                    @Html.ValidationMessageFor(model => model.DocumentName, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md shadow hover:bg-blue-600">
                    Add Document Type
                </button>
            </div>
        </div>
    }
</div>
