@model AYLogistics.Models.SalesCurrency

<!-- Form Section -->
@using (Html.BeginForm("UpdateCurrency", "Sales", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-red-500 text-sm mb-4" })
    <div class="w-full bg-white rounded-lg shadow p-6 mt-6">
        <fieldset>
            <legend class="text-lg font-semibold mb-4">Update Currency</legend>

            <!-- Hidden Field for Currency ID -->
            @Html.HiddenFor(model => model.Id)

            <!-- Two-Column Grid Layout -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Currency Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.Currency)
                    </label>
                    @Html.TextBoxFor(
                        m => m.Currency,
                        new {
                            @class = "p-2 w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                        }
                    )
                    @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-red-500 text-sm" })
                </div>

                <!-- Exchange Rate -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        @Html.LabelFor(model => model.ExchangeRate)
                    </label>
                    @Html.TextBoxFor(
                        m => m.ExchangeRate,
                        new {
                            @class = "p-2 w-full rounded-md border border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                        }
                    )
                    @Html.ValidationMessageFor(model => model.ExchangeRate, "", new { @class = "text-red-500 text-sm" })
                </div>
            </div>
        </fieldset>
        <button type="submit" class="mt-4 px-4 py-2 bg-green-500 text-white rounded-md shadow hover:bg-green-600 focus:outline-none">
            Save
        </button>
    </div>
}
